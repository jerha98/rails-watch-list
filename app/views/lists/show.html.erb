<%@list.bookmarks.each do |bookmark| %>
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %> poster">
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <p class="card-text"><%= bookmark.movie.overview %></p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
<% end %>

<div class="container">
    <h1>Just add a movie by creating a bookmark ðŸ”–</h1>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment, label: "Leave your comment here:" %>
      <%= f.input :movie_id, collection: Movie.all, label_method: :title, value_method: :id, prompt: "Select a Movie" %>
      <%= f.button :submit, "Create a bookmark", class: "btn btn-warning", id: "submit-bookmark" %>
    <% end %>
</div>

